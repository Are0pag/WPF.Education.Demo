<Window x:Class="Demo.DataBinding.step_03.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.DataBinding.step_03"
        mc:Ignorable="d"
        Title="MyWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Для TextBox -->
            <RowDefinition Height="*"/>    <!-- Для DataGrid -->
        </Grid.RowDefinitions>
        
        <TextBox 
            x:Name="IdTextBox" 
            Text="{Binding SportsmenId, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
            Grid.Row="0"
            >
        </TextBox>
        
        <DataGrid
            ItemsSource="{Binding Achievements}"
            Grid.Row="1"
            >
        </DataGrid>
    </Grid>
</Window>
