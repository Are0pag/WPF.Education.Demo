<Window
    x:Class = "Demo.DataBinding.step_05.View.GridOfCompositeObjectsWindow"
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local = "clr-namespace:Demo.DataBinding.step_05.View"
    mc:Ignorable = "d"
    Title = "GridOfCompositeObjectsWindow"
    Height = "450"
    Width = "800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <DataGrid Grid.Column="0" x:Name="MyDataGrid"
                  ItemsSource="{Binding CompositeObjects}"
                  AutoGenerateColumns="False">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="OTEZ" Binding="{Binding Otchecnvo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  />
                <DataGridTextColumn Header="Name" Binding="{Binding StringParams.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  />
                <DataGridTextColumn Header="FullName" Binding="{Binding StringParams.FullName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <DataGridTextColumn Header="Comment" Binding="{Binding ObjectsParams.Descriptive.Comment, 
                                                     UpdateSourceTrigger=PropertyChanged, 
                                                     Mode=TwoWay}" />                
                <DataGridTextColumn Header="Description" Binding="{Binding ObjectsParams.Descriptive.Description, 
                                                     UpdateSourceTrigger=PropertyChanged, 
                                                     Mode=TwoWay}" />
            </DataGrid.Columns>
            
        </DataGrid>
        
        <Button Grid.Column="1" Command="{Binding AddCompositeObjectCommand}"></Button>
    </Grid>
</Window>
