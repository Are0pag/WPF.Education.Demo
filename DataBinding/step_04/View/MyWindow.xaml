<Window x:Class="Demo.DataBinding.step_04.View.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.DataBinding.step_04.View"
        mc:Ignorable="d"
        Title="MyWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Для TextBox -->
            <RowDefinition Height="*"/>    <!-- Для DataGrid -->
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0"
                 Text="{Binding Perimeter.Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 ></TextBox>
    </Grid>
</Window>
